    android:paddingBottom="5dp"
    android:paddingStart="10dp"
    android:paddingEnd="10dp">
    <item>
        <shape>
            <solid android:color="@color/light_gray_2"/>
            <corners android:radius="20dp"/>
            <padding android:top="5dp" android:bottom="5dp" android:left="5dp" android:right="30dp"/>
